# Production Environment Variables for Render
# Copy this file and update with your actual values

# YouTube API Configuration
YOUTUBE_API_KEY=your_production_youtube_api_key

# NextAuth Configuration
NEXTAUTH_URL=https://your-app-name.onrender.com
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# Discord OAuth (for course member access)
DISCORD_CLIENT_ID=your_production_discord_client_id
DISCORD_CLIENT_SECRET=your_production_discord_client_secret
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_COURSE_ROLE_ID=your_course_role_id

# Database Configuration (Render will auto-populate this)
DATABASE_PROVIDER=postgresql
# DATABASE_URL is automatically set by Render

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_production_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_production_stripe_publishable_key
NEXT_PUBLIC_STRIPE_PRICE_ID=your_stripe_price_id

# Redis Configuration (optional, for caching)
# REDIS_URL=redis://your-redis-instance

# Application Settings
NODE_ENV=production

# Admin Configuration
ADMIN_EMAILS=admin@example.com,admin2@example.com

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (if using email features)
# EMAIL_SERVER=smtp://user:pass@smtp.example.com:587
# EMAIL_FROM=noreply@example.com