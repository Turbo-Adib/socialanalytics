# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_secret_with_openssl_rand_base64_32

# Discord OAuth (for course member access)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_COURSE_ROLE_ID=your_course_role_id

# Database Configuration
# For production (PostgreSQL on Render)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"
# For local development with SQLite, use:
# DATABASE_URL="file:./dev.db"

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Admin Configuration (use strong passwords)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD_HASH=bcrypt_hashed_password

# Rate Limiting Configuration
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_API=30
RATE_LIMIT_YOUTUBE=10

# Monitoring (optional but recommended)
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Redis Configuration (for production)
REDIS_URL=redis://localhost:6379

# Environment
NODE_ENV=development